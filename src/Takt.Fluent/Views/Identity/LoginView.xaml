<Window x:Class="Takt.Fluent.Views.Identity.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
        xmlns:helpers="clr-namespace:Takt.Fluent.Helpers"
        xmlns:local="clr-namespace:Takt.Fluent.Extensions"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:controls="clr-namespace:Takt.Fluent.Controls"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title=""
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="{DynamicResource LayerFillColorDefaultBrush}">
    
    <Window.Resources>
        <helpers:EmptyToVisibilityConverter x:Key="EmptyToVisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <helpers:InvertedBooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter" />
        <helpers:InverseBoolConverter x:Key="InverseBoolConverter" />
        <helpers:StringToBoolConverter x:Key="StringToBoolConverter" />
        
        <Style TargetType="fa:IconBlock">
            <Setter Property="IconFont" Value="Solid"/>
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}"/>
        </Style>
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource CirclePlainDanger}">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="materialDesign:RippleAssist.IsCentered" Value="True"/>
            <Setter Property="materialDesign:RippleAssist.Feedback" Value="{x:Null}"/>
        </Style>
        
        <!-- Fluent Design ContextMenu 样式 -->
        <Style x:Key="FluentContextMenuStyle" TargetType="ContextMenu">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="MaxWidth" Value="240"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <StackPanel Background="Transparent"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border x:Name="Border"
                                Background="{DynamicResource LayerFillColorDefaultBrush}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ItemsPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Fluent Design MenuItem 基础样式 -->
        <Style x:Key="FluentMenuItemBaseStyle" TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="MinWidth" Value="0"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="border"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- 图标容器 -->
                                <ContentPresenter x:Name="IconPresenter"
                                                  Grid.Column="0"
                                                  ContentSource="Icon"
                                                  Margin="0,0,12,0"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                                
                                <!-- 文本容器 -->
                                <ContentPresenter x:Name="HeaderPresenter"
                                                  Grid.Column="1"
                                                  ContentSource="Header"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  RecognizesAccessKey="True"/>
                                
                                <!-- 选中标记 -->
                                <Border x:Name="CheckMarkContainer"
                                        Grid.Column="2"
                                        Width="16"
                                        Height="16"
                                        Margin="12,0,0,0"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Visibility="Collapsed">
                                    <materialDesign:PackIcon Kind="Check"
                                                             Width="16"
                                                             Height="16"
                                                             Foreground="{DynamicResource InfoFillColorDefaultBrush}"/>
                                </Border>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsCheckable" Value="True">
                                <Setter TargetName="CheckMarkContainer" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMarkContainer" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Fluent Design 语言菜单项样式（Info/Primary 色系，支持选中状态） -->
        <Style x:Key="FluentLanguageMenuItemStyle" TargetType="MenuItem" BasedOn="{StaticResource FluentMenuItemBaseStyle}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="border"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}"
                                MinHeight="36"
                                Height="36">
                            <Grid Background="Transparent"
                                  HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- 文本容器 -->
                                <ContentPresenter x:Name="HeaderPresenter"
                                                  Grid.Column="0"
                                                  ContentSource="Header"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Stretch"
                                                  Margin="0"
                                                  RecognizesAccessKey="True"/>
                                
                                <!-- 选中标记 -->
                                <Border x:Name="CheckMarkContainer"
                                        Grid.Column="1"
                                        Width="16"
                                        Height="16"
                                        Margin="8,0,0,0"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Right"
                                        Visibility="Collapsed">
                                    <materialDesign:PackIcon Kind="Check"
                                                             Width="16"
                                                             Height="16"
                                                             Foreground="{DynamicResource InfoFillColorDefaultBrush}"/>
                                </Border>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- 只有选中时才显示勾图标和高亮背景 -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="CheckMarkContainer" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource InfoFillColorSecondaryBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource InfoTextFillColorPrimaryBrush}"/>
                                <Setter TargetName="CheckMarkContainer" Property="materialDesign:PackIcon.Foreground" Value="{DynamicResource InfoTextFillColorPrimaryBrush}"/>
                            </MultiTrigger>
                            <!-- 鼠标悬停：未选中时显示悬停背景，选中时保持选中背景 -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsChecked" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}"/>
                            </MultiTrigger>
                            <!-- 按下状态 -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource InfoFillColorDefaultBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource InfoTextFillColorPrimaryBrush}"/>
                                <Setter TargetName="CheckMarkContainer" Property="materialDesign:PackIcon.Foreground" Value="{DynamicResource InfoTextFillColorPrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </Window.Resources>
    
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1.2*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧品牌区域 -->
                <Border x:Name="BrandAreaBorder"
                        Grid.Column="0">
                    <StackPanel VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               Margin="60">
                        <Image Source="pack://application:,,,/Assets/takt-res.png"
                               Width="120" 
                               Height="120"
                               Margin="0,0,0,40"
                               Stretch="Uniform"/>
                        <TextBlock Text="{local:Localization Key=common.app.name}"
                                   FontSize="32" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,16"/>
                        <TextBlock Text="{local:Localization Key=common.app.slogan}"
                                   FontSize="18" 
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Opacity="0.85"/>
                        <TextBlock Text="{local:Localization Key=common.app.tagline}" 
                                   FontSize="14" 
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,20,0,0"
                                   Opacity="0.75"/>
                    </StackPanel>
                </Border>
                
                <!-- 分隔线 -->
                <Rectangle Grid.Column="1" 
                           Width="1" 
                           Fill="{DynamicResource ControlStrokeColorSecondaryBrush}"/>
                
                <!-- 右侧登录区域 -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 顶部操作按钮 -->
                    <StackPanel x:Name="TopButtonsPanel"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,4,4,0">
                        <Button x:Name="LanguageButton"
                                Style="{StaticResource MaterialDesignIconButton}"
                                Width="36"
                                Height="36"
                                Margin="0,0,4,0"
                                ToolTip="{Binding LanguageToolTip}"
                                Click="LanguageButton_Click">
                            <fa:IconBlock x:Name="LanguageIcon" Icon="{x:Static fa:IconChar.Globe}" FontSize="18"/>
                            <Button.ContextMenu>
                                <ContextMenu x:Name="LanguageContextMenu"
                                             Style="{StaticResource FluentContextMenuStyle}"
                                             Opened="LanguageContextMenu_Opened">
                                    <ContextMenu.ItemContainerStyle>
                                        <Style TargetType="MenuItem" BasedOn="{StaticResource FluentLanguageMenuItemStyle}">
                                            <Setter Property="Header" Value="{Binding Name}"/>
                                            <Setter Property="IsCheckable" Value="True"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <EventSetter Event="Click" Handler="LanguageMenuItem_Click"/>
                                        </Style>
                                    </ContextMenu.ItemContainerStyle>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>

                        <Button x:Name="ThemeButton"
                                Style="{StaticResource MaterialDesignIconButton}"
                                Width="36"
                                Height="36"
                                Margin="4,0,0,0"
                                ToolTip="{Binding ThemeToolTip}"
                                Click="ThemeButton_Click">
                            <fa:IconBlock x:Name="ThemeIcon" Icon="{x:Static fa:IconChar.Palette}" FontSize="18"/>
                        </Button>

                        <Button Style="{StaticResource DefaultDangerNoSmall}"
                                ToolTip="{local:Localization Key=common.button.close}"
                                Click="CloseButton_Click">
                            <fa:IconBlock Icon="{x:Static fa:IconChar.Xmark}"
                                          FontSize="18"
                                          Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        </Button>
                    </StackPanel>

                    <!-- 登录表单和进度条容器 -->
                    <Grid Grid.Row="1" x:Name="LoginContentGrid">
                    <!-- 登录表单 -->
                    <Border x:Name="LoginFormBorder"
                            Margin="32,8,32,32"
                            Padding="48,8,48,48"
                            CornerRadius="16"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}">
                            <StackPanel VerticalAlignment="Center">
                            <!-- 欢迎标题 -->
                            <StackPanel Margin="0,0,0,32">
                                <TextBlock Text="{local:Localization Key=login.welcome}"
                                           FontSize="28" 
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <TextBlock Text="{local:Localization Key=login.description}"
                                           FontSize="14"
                                           Margin="0,4,0,0"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           Opacity="0.8"/>
                            </StackPanel>

                            <!-- 用户名输入框 -->
                            <Grid Margin="0,0,0,20" MinHeight="56">
                                    <TextBox x:Name="UsernameTextBox"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="{local:Localization Key=login.username}"
                                             materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                             MinHeight="32"
                                             Padding="36,6,12,6"
                                             FontSize="13"
                                             VerticalAlignment="Center"
                                             VerticalContentAlignment="Center"
                                             Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                             materialDesign:HintAssist.Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                        <TextBox.Text>
                                            <Binding Path="Username" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="True"/>
                                        </TextBox.Text>
                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
                                    </TextBox.InputBindings>
                                    </TextBox>
                                    <fa:IconBlock Icon="{x:Static fa:IconChar.User}"
                                                  FontSize="16"
                                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Margin="12,0,0,0"
                                                  IsHitTestVisible="False"
                                                  Panel.ZIndex="1"/>
                                </Grid>

                            <!-- 密码输入框 -->
                            <Grid Margin="0,0,0,12" MinHeight="56">
                                    <PasswordBox x:Name="PasswordBox"
                                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                             materialDesign:HintAssist.Hint="{local:Localization Key=login.password}"
                                                 materialDesign:HintAssist.HelperText="{Binding PasswordError}"
                                                 materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                                 MinHeight="32"
                                                 Padding="36,6,12,6"
                                                 FontSize="13"
                                                 VerticalAlignment="Center"
                                                 VerticalContentAlignment="Center"
                                                 Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                             materialDesign:HintAssist.Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                    <PasswordBox.InputBindings>
                                        <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
                                    </PasswordBox.InputBindings>
                                </PasswordBox>
                                    <fa:IconBlock Icon="{x:Static fa:IconChar.Lock}"
                                                  FontSize="16"
                                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Margin="12,0,0,0"
                                                  IsHitTestVisible="False"
                                                  Panel.ZIndex="1"/>
                                </Grid>

                            <!-- 记住密码和忘记密码 -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox Grid.Column="0"
                                          Content="{local:Localization Key=login.rememberme}" 
                                          IsChecked="{Binding RememberMe}"
                                          Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                          VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1"
                                           Text="{local:Localization Key=login.forgot}"
                                           Foreground="{DynamicResource AccentFillColorDefaultBrush}"
                                           Cursor="Hand"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextDecorations" Value="{x:Null}"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="{DynamicResource AccentFillColorSecondaryBrush}"/>
                                                    <Setter Property="TextDecorations" Value="Underline"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>

                            <!-- 数据初始化状态提示 -->
                            <Border Style="{StaticResource ErrorMessageBorderStyle}"
                                    Visibility="{Binding IsInitializing, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    Background="{DynamicResource InfoFillColorSecondaryBrush}"
                                    BorderBrush="{DynamicResource InfoFillColorDefaultBrush}">
                                <StackPanel Orientation="Horizontal">
                                    <ProgressBar Width="16"
                                                Height="16"
                                                Style="{StaticResource MaterialDesignCircularProgressBar}"
                                                IsIndeterminate="True"
                                                Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding InitializationMessage}" 
                                               Style="{StaticResource ErrorMessageTextStyle}"
                                               Foreground="{DynamicResource InfoTextFillColorPrimaryBrush}"/>
                                </StackPanel>
                            </Border>

                            <!-- 统一错误消息：仅用于服务端/系统错误 -->
                            <Border Style="{StaticResource ErrorMessageBorderStyle}"
                                    Visibility="{Binding ErrorMessage, Converter={StaticResource EmptyToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconBlock Icon="{x:Static fa:IconChar.CircleExclamation}"
                                                  Foreground="{DynamicResource SystemFillColorCriticalBrush}"/>
                                    <TextBlock Text="{Binding ErrorMessage}" 
                                               Style="{StaticResource ErrorMessageTextStyle}"/>
                                </StackPanel>
                            </Border>

                            <!-- 登录按钮 -->
                            <Button Height="48"
                                    MinHeight="48"
                                    MaxHeight="48"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Command="{Binding LoginCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Margin="0,8,0,0"
                                    IsDefault="True"
                                    IsEnabled="{Binding IsInitializing, Converter={StaticResource InverseBoolConverter}}">
                                <Grid>
                                    <Grid Visibility="{Binding IsLoading, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center">
                                            <fa:IconBlock Icon="{x:Static fa:IconChar.Check}" 
                                                          Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"/>
                                            <TextBlock Text="{local:Localization Key=login.button}"
                                                       Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"
                                                       FontSize="16"
                                                       VerticalAlignment="Center"
                                                       Margin="8,0,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center">
                                            <ProgressBar Width="28"
                                                        Height="28"
                                                        Style="{StaticResource MaterialDesignCircularProgressBar}"
                                                        IsIndeterminate="True"/>
                                            <TextBlock Text="{local:Localization Key=login.loading}"
                                                       Foreground="{DynamicResource TextOnAccentFillColorPrimaryBrush}"
                                                       FontSize="16"
                                                       VerticalAlignment="Center"
                                                       Margin="8,0,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Button>
                            </StackPanel>
                    </Border>
                        
                        <!-- 进度条层（初始隐藏，登录时显示） -->
                        <Grid x:Name="ProgressBarLayer"
                              Visibility="{Binding ShowProgressBar, Converter={StaticResource BooleanToVisibilityConverter}}"
                              Opacity="0"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              Margin="32,8,32,32">
                            <StackPanel VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                <!-- 进度百分比文本（上方） -->
                                <TextBlock Text="{Binding ProgressValue, StringFormat='{}{0:F0}%'}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,12"/>
                                
                                <!-- 线性进度条 -->
                                <controls:TaktLinearProgressBar x:Name="LoginProgressBar"
                                                                 IsIndeterminate="False"
                                                                 Value="{Binding ProgressValue}"
                                                                 Minimum="0"
                                                                 Maximum="100"
                                                                 Width="400"
                                                                 Height="4"
                                                                 HorizontalAlignment="Center"
                                                                 Margin="0,0,0,12"/>
                                
                                <!-- 圆形进度条（可选，可以根据需要显示） -->
                                <controls:TaktCircularProgressBar x:Name="LoginCircularProgressBar"
                                                                   IsIndeterminate="False"
                                                                   Value="{Binding ProgressValue}"
                                                                   Minimum="0"
                                                                   Maximum="100"
                                                                   Size="48"
                                                                   HorizontalAlignment="Center"
                                                                   Visibility="Collapsed"
                                                                   Margin="0,0,0,12"/>
                                
                                <!-- 耗时文本（下方） -->
                                <TextBlock Text="{Binding ElapsedTime}"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>

            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,16">
                <TextBlock Text="©"
                           FontSize="12"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, Path=Year}"
                           FontSize="12"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                           Margin="4,0,0,0"/>
                <TextBlock Text="{local:Localization Key=common.app.copyrightshort}"
                           FontSize="12"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                           Margin="4,0,0,0"/>
            </StackPanel>
        </Grid>
</Window>
