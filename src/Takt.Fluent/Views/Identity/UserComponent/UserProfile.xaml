<Window x:Class="Takt.Fluent.Views.Identity.UserComponent.UserProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
        xmlns:local="clr-namespace:Takt.Fluent.Extensions"
        xmlns:helpers="clr-namespace:Takt.Fluent.Helpers"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="用户信息"
        SizeToContent="Manual"
        WindowStartupLocation="Manual"
        ResizeMode="CanResize"
        Background="{DynamicResource MaterialDesignPaper}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <helpers:EnumToStringConverter x:Key="EnumToStringConverter"/>
        <helpers:PathToPackUriConverter x:Key="PathToPackUriConverter"/>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>
    </Window.Resources>
    <Border Background="{DynamicResource ControlFillColorDefaultBrush}" Padding="20" CornerRadius="12">
        <StackPanel>
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- 用户头像 -->
                <Border Grid.Column="0"
                        Width="64"
                        Height="64"
                        CornerRadius="32"
                        BorderThickness="2"
                        BorderBrush="{DynamicResource AccentFillColorControlBrush}"
                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                        Margin="0,0,16,0"
                        VerticalAlignment="Center">
                    <Image Source="{Binding ViewModel.UserInfo.Avatar, Converter={StaticResource PathToPackUriConverter}}"
                           Width="60"
                           Height="60"
                           Stretch="UniformToFill"
                           RenderOptions.BitmapScalingMode="HighQuality">
                        <Image.Clip>
                            <EllipseGeometry Center="30,30" RadiusX="30" RadiusY="30"/>
                        </Image.Clip>
                    </Image>
                </Border>
                <StackPanel Grid.Column="1">
                    <TextBlock
                        FontSize="22"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Text="{local:Localization Key=identity.user.detailtitle}"/>
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Text="{local:Localization Key=identity.user.detailsubtitle}"/>
                </StackPanel>
            </Grid>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 第一行：头像 | 用户名 -->
                    <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{local:Localization Key=identity.user.avatar}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding ViewModel.UserInfo.Avatar}" 
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </Grid>

                    <!-- 第二行：ID | 用户名 -->
                    <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{local:Localization Key=common.audit.Id}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding ViewModel.UserInfo.Id}" 
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="2" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{local:Localization Key=identity.user.username}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding ViewModel.UserInfo.Username}" 
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </Grid>

                    <!-- 第三行：真实姓名 | 邮箱 -->
                    <Grid Grid.Row="2" Grid.Column="0" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{local:Localization Key=identity.user.realname}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding ViewModel.UserInfo.RealName}" 
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </Grid>
                    <Grid Grid.Row="2" Grid.Column="2" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{local:Localization Key=identity.user.email}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding ViewModel.UserInfo.Email}" 
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </Grid>

                    <!-- 第四行：手机 | 用户类型 -->
                    <Grid Grid.Row="3" Grid.Column="0" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{local:Localization Key=identity.user.phone}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding ViewModel.UserInfo.Phone}" 
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </Grid>
                    <Grid Grid.Row="3" Grid.Column="2" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{local:Localization Key=identity.user.usertype}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding ViewModel.UserInfo.UserType, Converter={StaticResource EnumToStringConverter}}" 
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </Grid>

                    <!-- 第五行：性别 | 状态 -->
                    <Grid Grid.Row="4" Grid.Column="0" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{local:Localization Key=identity.user.usergender}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding ViewModel.UserInfo.UserGender, Converter={StaticResource EnumToStringConverter}}" 
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </Grid>
                    <Grid Grid.Row="4" Grid.Column="2" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{local:Localization Key=identity.user.userstatus}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding ViewModel.UserInfo.UserStatus, Converter={StaticResource EnumToStringConverter}}" 
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </Grid>

                    <!-- 第六行：创建时间（跨两列） -->
                    <Grid Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{local:Localization Key=common.audit.CreatedTime}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding ViewModel.UserInfo.CreatedTime, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" 
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </Grid>

                    <!-- 第七行：备注（跨两列） -->
                    <Grid Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{local:Localization Key=common.audit.Remarks}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding ViewModel.UserInfo.Remarks}" 
                                   VerticalAlignment="Top"
                                   TextWrapping="Wrap"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </Grid>
                </Grid>
            </ScrollViewer>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Width="120"
                        Style="{StaticResource DefaultInfo}"
                        Command="{Binding ViewModel.CloseCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Content="{local:Localization Key=common.button.close}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
