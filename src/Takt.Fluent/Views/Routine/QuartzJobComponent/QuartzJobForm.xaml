<Window x:Class="Takt.Fluent.Views.Routine.QuartzJobComponent.QuartzJobForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Takt.Fluent.Extensions"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:helpers="clr-namespace:Takt.Fluent.Helpers"
        xmlns:controls="clr-namespace:Takt.Fluent.Controls"
        mc:Ignorable="d"
        d:DesignHeight="700"
        d:DesignWidth="900"
        Title="{Binding Title}" 
        SizeToContent="Manual" 
        WindowStartupLocation="Manual"
        ResizeMode="CanResize" 
        Background="{DynamicResource MaterialDesignPaper}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <helpers:IntEqualsConverter x:Key="IntEqualsConverter"/>
        <helpers:EmptyToVisibilityConverter x:Key="EmptyToVisibilityConverter"/>
        <helpers:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TabControl 容器 -->
        <TabControl Grid.Row="0" 
                    Background="{DynamicResource MaterialDesignPaper}"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                    Margin="0,0,0,16">
            <!-- 基本信息 Tab -->
            <TabItem Header="{local:Localization Key=routine.quartzjob.basicinfo}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 任务名称 -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" MinHeight="56">
                            <Grid MinHeight="32">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0">
                                    <Run Text="*" Foreground="{DynamicResource SystemFillColorCriticalBrush}"/>
                                    <Run Text="{local:Localization Key=routine.quartzjob.jobname}"/>
                                </TextBlock>
                                <TextBox Grid.Column="1" 
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.HelperText="{Binding JobNameError}"
                                         materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                         MinHeight="32"
                                         Padding="12,6"
                                         FontSize="13"
                                         VerticalAlignment="Center"
                                         VerticalContentAlignment="Center"
                                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                         materialDesign:HintAssist.Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                         Text="{Binding JobName, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                            <TextBlock Grid.Column="1" 
                                       Style="{StaticResource ErrorTextStyle}" 
                                       Text="{Binding JobNameError}"
                                       Visibility="{Binding JobNameError, Converter={StaticResource EmptyToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- 任务组 -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" MinHeight="56">
                            <Grid MinHeight="32">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0">
                                    <Run Text="*" Foreground="{DynamicResource SystemFillColorCriticalBrush}"/>
                                    <Run Text="{local:Localization Key=routine.quartzjob.jobgroup}"/>
                                </TextBlock>
                                <TextBox Grid.Column="1" 
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.HelperText="{Binding JobGroupError}"
                                         materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                         MinHeight="32"
                                         Padding="12,6"
                                         FontSize="13"
                                         VerticalAlignment="Center"
                                         VerticalContentAlignment="Center"
                                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                         materialDesign:HintAssist.Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                         Text="{Binding JobGroup, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                            <TextBlock Grid.Column="1" 
                                       Style="{StaticResource ErrorTextStyle}" 
                                       Text="{Binding JobGroupError}"
                                       Visibility="{Binding JobGroupError, Converter={StaticResource EmptyToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- 任务类名 -->
                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="8,0,0,8" MinHeight="56">
                            <Grid MinHeight="32">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0">
                                    <Run Text="*" Foreground="{DynamicResource SystemFillColorCriticalBrush}"/>
                                    <Run Text="{local:Localization Key=routine.quartzjob.jobclassname}"/>
                                </TextBlock>
                                <TextBox Grid.Column="1" 
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.HelperText="{Binding JobClassNameError}"
                                         materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                         MinHeight="32"
                                         Padding="12,6"
                                         FontSize="13"
                                         VerticalAlignment="Center"
                                         VerticalContentAlignment="Center"
                                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                         materialDesign:HintAssist.Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                         Text="{Binding JobClassName, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                            <TextBlock Grid.Column="1" 
                                       Style="{StaticResource ErrorTextStyle}" 
                                       Text="{Binding JobClassNameError}"
                                       Visibility="{Binding JobClassNameError, Converter={StaticResource EmptyToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- 任务状态 -->
                        <StackPanel Grid.Row="1" Grid.Column="2" Margin="8,0,0,8" MinHeight="56">
                            <Grid MinHeight="32">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0">
                                    <Run Text="{local:Localization Key=routine.quartzjob.status}"/>
                                </TextBlock>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                    <RadioButton Style="{StaticResource MaterialDesignRadioButton}" 
                                                 FontSize="13" 
                                                 Padding="12,6" 
                                                 Content="{local:Localization Key=routine.quartzjob.status.enabled}"
                                                 GroupName="StatusGroup"
                                                 VerticalAlignment="Center"
                                                 IsChecked="{Binding Status, Converter={StaticResource IntEqualsConverter}, ConverterParameter=0, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <RadioButton Style="{StaticResource MaterialDesignRadioButton}" 
                                                 FontSize="13" 
                                                 Padding="12,6" 
                                                 Content="{local:Localization Key=routine.quartzjob.status.disabled}"
                                                 GroupName="StatusGroup"
                                                 VerticalAlignment="Center"
                                                 Margin="12,0,0,0"
                                                 IsChecked="{Binding Status, Converter={StaticResource IntEqualsConverter}, ConverterParameter=1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- 任务描述（跨两列） -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,8" MinHeight="56">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{local:Localization Key=routine.quartzjob.jobdescription}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                                <StackPanel Grid.Column="1">
                                    <TextBox 
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                        materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                        Padding="16,10"
                                        FontSize="14"
                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                        materialDesign:HintAssist.Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="{Binding JobDescription, UpdateSourceTrigger=PropertyChanged}"
                                        TextWrapping="Wrap" 
                                        AcceptsReturn="True" 
                                        VerticalScrollBarVisibility="Hidden"
                                        MinHeight="80"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- 触发器配置 Tab -->
            <TabItem Header="{local:Localization Key=routine.quartzjob.triggerconfig}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 触发器名称 -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" MinHeight="56">
                            <Grid MinHeight="32">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0">
                                    <Run Text="*" Foreground="{DynamicResource SystemFillColorCriticalBrush}"/>
                                    <Run Text="{local:Localization Key=routine.quartzjob.triggername}"/>
                                </TextBlock>
                                <TextBox Grid.Column="1" 
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.HelperText="{Binding TriggerNameError}"
                                         materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                         MinHeight="32"
                                         Padding="12,6"
                                         FontSize="13"
                                         VerticalAlignment="Center"
                                         VerticalContentAlignment="Center"
                                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                         materialDesign:HintAssist.Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                         Text="{Binding TriggerName, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                            <TextBlock Grid.Column="1" 
                                       Style="{StaticResource ErrorTextStyle}" 
                                       Text="{Binding TriggerNameError}"
                                       Visibility="{Binding TriggerNameError, Converter={StaticResource EmptyToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- 触发器组 -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" MinHeight="56">
                            <Grid MinHeight="32">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0">
                                    <Run Text="*" Foreground="{DynamicResource SystemFillColorCriticalBrush}"/>
                                    <Run Text="{local:Localization Key=routine.quartzjob.triggergroup}"/>
                                </TextBlock>
                                <TextBox Grid.Column="1" 
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.HelperText="{Binding TriggerGroupError}"
                                         materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                         MinHeight="32"
                                         Padding="12,6"
                                         FontSize="13"
                                         VerticalAlignment="Center"
                                         VerticalContentAlignment="Center"
                                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                         materialDesign:HintAssist.Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                         Text="{Binding TriggerGroup, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                            <TextBlock Grid.Column="1" 
                                       Style="{StaticResource ErrorTextStyle}" 
                                       Text="{Binding TriggerGroupError}"
                                       Visibility="{Binding TriggerGroupError, Converter={StaticResource EmptyToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- Cron表达式（跨两列） -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,8" MinHeight="56">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0">
                                    <Run Text="*" Foreground="{DynamicResource SystemFillColorCriticalBrush}"/>
                                    <Run Text="{local:Localization Key=routine.quartzjob.cronexpression}"/>
                                </TextBlock>
                                <StackPanel Grid.Column="1">
                                    <TextBox 
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                        materialDesign:HintAssist.HelperText="{Binding CronExpressionError}"
                                        materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                        MinHeight="32"
                                        Padding="12,6"
                                        FontSize="13"
                                        VerticalAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                        materialDesign:HintAssist.Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="{Binding CronExpression, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBlock 
                                        Style="{StaticResource ErrorTextStyle}" 
                                        Text="{Binding CronExpressionError}"
                                        Margin="0,4,0,0"
                                        Visibility="{Binding CronExpressionError, Converter={StaticResource EmptyToVisibilityConverter}}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- 高级设置 Tab -->
            <TabItem Header="{local:Localization Key=routine.quartzjob.advancedsettings}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 任务参数（JSON格式） -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,8" MinHeight="56">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{local:Localization Key=routine.quartzjob.jobparams}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                                <StackPanel Grid.Column="1">
                                    <TextBox 
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                        materialDesign:HintAssist.HelperText="{Binding JobParamsError}"
                                        materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                        Padding="16,10"
                                        FontSize="14"
                                        FontFamily="Consolas"
                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                        materialDesign:HintAssist.Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="{Binding JobParams, UpdateSourceTrigger=PropertyChanged}"
                                        TextWrapping="Wrap" 
                                        AcceptsReturn="True" 
                                        VerticalScrollBarVisibility="Auto"
                                        MinHeight="120"
                                        MaxHeight="300"/>
                                    <TextBlock 
                                        Style="{StaticResource ErrorTextStyle}" 
                                        Text="{Binding JobParamsError}"
                                        Margin="0,4,0,0"
                                        Visibility="{Binding JobParamsError, Converter={StaticResource EmptyToVisibilityConverter}}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- 备注 -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,8" MinHeight="56">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{local:Localization Key=common.audit.Remarks}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                                <StackPanel Grid.Column="1">
                                    <TextBox 
                                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                        materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                                        Padding="16,10"
                                        FontSize="14"
                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                        materialDesign:HintAssist.Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Text="{Binding Remarks, UpdateSourceTrigger=PropertyChanged}"
                                        TextWrapping="Wrap" 
                                        AcceptsReturn="True" 
                                        VerticalScrollBarVisibility="Hidden"
                                        MinHeight="80"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- 错误信息显示 -->
        <StackPanel Grid.Row="1" Margin="0,0,0,16" MinHeight="40">
            <TextBlock 
                Text="{Binding Error}"
                Foreground="{DynamicResource SystemFillColorCriticalBrush}"
                FontSize="13"
                TextWrapping="Wrap"
                Visibility="{Binding Error, Converter={StaticResource EmptyToVisibilityConverter}}"
                Margin="0,8,0,0"/>
        </StackPanel>

        <!-- 按钮区域 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
            <Button IsDefault="True" 
                    Command="{Binding SaveCommand}" 
                    Content="{local:Localization Key=common.button.submit}" 
                    Style="{StaticResource DefaultPrimary}"
                    Margin="0,0,12,0"/>
            <Button IsCancel="True"
                    Command="{Binding CancelCommand}"
                    Content="{local:Localization Key=common.button.cancel}"
                    Style="{StaticResource DefaultInfo}"/>
        </StackPanel>
    </Grid>
</Window>

