<UserControl x:Class="Takt.Fluent.Views.About.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Takt.Fluent.Extensions"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="600">
    <Grid Background="{DynamicResource ApplicationBackgroundBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Background="{DynamicResource ApplicationBackgroundBrush}"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="32">
            <StackPanel>
                <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                        Padding="24"
                        CornerRadius="12"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        Margin="0,0,0,24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="{local:Localization Key=common.app.title}"
                                       FontSize="28"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                            <TextBlock x:Name="EditionTextBlock"
                                       FontSize="16"
                                       Margin="0,6,0,0"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                            <TextBlock x:Name="VersionTextBlock"
                                       FontSize="14"
                                       Margin="0,4,0,0"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                            <TextBlock x:Name="DotNetVersionTextBlock"
                                       FontSize="14"
                                       Margin="0,4,0,0"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="{local:Localization Key=common.app.copyright}"
                                       FontSize="12"
                                       Margin="0,4,0,0"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal">
                            <TextBlock Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                       Margin="0,0,12,0">
                                <Hyperlink Click="LicenseStatusHyperlink_Click">
                                    <Run Text="{local:Localization Key=about.links.licenseStatus}"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                                <Hyperlink Click="LicenseTermsHyperlink_Click">
                                    <Run Text="{local:Localization Key=about.links.licenseTerms}"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                        Padding="24"
                        CornerRadius="12"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        Margin="0,0,0,24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{local:Localization Key=about.section.productInfo}"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="{local:Localization Key=about.label.productName}"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,8" />
                                <TextBlock Grid.Row="0" Grid.Column="1"
                                           x:Name="ProductNameValueTextBlock"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           Margin="0,0,0,8" />

                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="{local:Localization Key=about.label.edition}"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,8" />
                                <TextBlock Grid.Row="1" Grid.Column="1"
                                           x:Name="EditionValueTextBlock"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           Margin="0,0,0,8" />

                                <TextBlock Grid.Row="2" Grid.Column="0"
                                           Text="{local:Localization Key=about.label.version}"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,8" />
                                <TextBlock Grid.Row="2" Grid.Column="1"
                                           x:Name="VersionValueTextBlock"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           Margin="0,0,0,8" />

                                <TextBlock Grid.Row="3" Grid.Column="0"
                                           Text="{local:Localization Key=about.buildDate}"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,8" />
                                <TextBlock Grid.Row="3" Grid.Column="1"
                                           x:Name="BuildDateTextBlock"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           Margin="0,0,0,8" />

                                <TextBlock Grid.Row="4" Grid.Column="0"
                                           Text="{local:Localization Key=about.label.company}"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,8" />
                                <TextBlock Grid.Row="4" Grid.Column="1"
                                           x:Name="CompanyValueTextBlock"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           Margin="0,0,0,8" />

                                <TextBlock Grid.Row="5" Grid.Column="0"
                                           Text="{local:Localization Key=about.label.installationPath}"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,8" />
                                <TextBlock Grid.Row="5" Grid.Column="1"
                                           x:Name="InstallPathValueTextBlock"
                                           TextWrapping="Wrap"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           Margin="0,0,0,8" />

                                <Button Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                                        x:Name="SystemInfoButton"
                                        Content="{local:Localization Key=about.button.systemInfo}"
                                        HorizontalAlignment="Left"
                                        Margin="0,8,0,0"
                                        Click="SystemInfoButton_Click"
                                        Style="{StaticResource DefaultInfo}" />
                            </Grid>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="32,0,0,0">
                            <TextBlock Text="{local:Localization Key=about.section.environmentInfo}"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="{local:Localization Key=about.label.dotnetVersion}"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,8" />
                                <TextBlock Grid.Row="0" Grid.Column="1"
                                           x:Name="DotNetVersionValueTextBlock"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           Margin="0,0,0,8" />

                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="{local:Localization Key=about.label.osVersion}"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,8" />
                                <TextBlock Grid.Row="1" Grid.Column="1"
                                           x:Name="OsVersionValueTextBlock"
                                           TextWrapping="Wrap"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           Margin="0,0,0,8" />

                                <TextBlock Grid.Row="2" Grid.Column="0"
                                           Text="{local:Localization Key=about.label.architecture}"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,8" />
                                <TextBlock Grid.Row="2" Grid.Column="1"
                                           x:Name="ArchitectureValueTextBlock"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           Margin="0,0,0,8" />

                                <TextBlock Grid.Row="3" Grid.Column="0"
                                           Text="{local:Localization Key=about.label.processorCount}"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,8" />
                                <TextBlock Grid.Row="3" Grid.Column="1"
                                           x:Name="ProcessorValueTextBlock"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           Margin="0,0,0,8" />

                                <TextBlock Grid.Row="4" Grid.Column="0"
                                           Text="{local:Localization Key=about.label.runtimeIdentifier}"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Row="4" Grid.Column="1"
                                           x:Name="RuntimeIdentifierValueTextBlock"
                                           TextWrapping="Wrap"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                        Padding="24"
                        CornerRadius="12"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="{local:Localization Key=about.installedProducts.title}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                        <TextBlock Text="{local:Localization Key=about.installedProducts.subtitle}"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                        <ListBox x:Name="InstalledProductsList"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 MaxHeight="200">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               FontSize="12"
                                               LineHeight="14" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>

                <TextBlock x:Name="DisclaimerTextBlock"
                           TextWrapping="Wrap"
                           FontSize="11"
                           LineHeight="16"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                           Opacity="0.8"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
