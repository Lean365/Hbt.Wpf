<UserControl x:Class="Takt.Fluent.Views.Dashboard.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
             xmlns:local="clr-namespace:Takt.Fluent.Extensions"
             xmlns:helpers="clr-namespace:Takt.Fluent.Helpers"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    <UserControl.Resources>
        <!-- 转换器 -->
        <helpers:ProgressWidthConverter x:Key="ProgressWidthConverter"/>
        <helpers:ProgressWidthMultiConverter x:Key="ProgressWidthMultiConverter"/>
        <helpers:ValueComparisonConverter x:Key="WidthComparisonConverter" Comparison="LessThan" ComparisonValue="800"/>
        
        <!-- Fluent Design Card 阴影效果（符合 Fluent Design 规范） -->
        <DropShadowEffect x:Key="CardShadowEffect"
                          Color="Black"
                          Opacity="0.08"
                          BlurRadius="16"
                          ShadowDepth="4"
                          Direction="270"
                          RenderingBias="Performance"/>
        <DropShadowEffect x:Key="CardHoverShadowEffect"
                          Color="Black"
                          Opacity="0.12"
                          BlurRadius="24"
                          ShadowDepth="8"
                          Direction="270"
                          RenderingBias="Quality"/>
        
        <!-- Fluent Design Card 基础样式 -->
        <Style x:Key="FluentDashboardCardBaseStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect" Value="{StaticResource CardShadowEffect}"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform/>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <!-- 鼠标悬停效果 -->
                <Trigger Property="IsMouseOver" Value="True">
                    <!-- 使用 Setter 改变背景色（支持 DynamicResource） -->
                    <Setter Property="Background" Value="{DynamicResource LayerFillColorAltBrush}"/>
                    <Setter Property="Effect" Value="{StaticResource CardHoverShadowEffect}"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <!-- Fluent Design 标准的轻微上移动画（更流畅） -->
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                 To="-3"
                                                 Duration="0:0:0.15">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <!-- 恢复位置动画（使用更流畅的缓动） -->
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                 To="0"
                                                 Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseInOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 在线用户 Card 样式（蓝色/Info） -->
        <Style x:Key="OnlineUsersCardStyle" TargetType="Border" BasedOn="{StaticResource FluentDashboardCardBaseStyle}">
            <Setter Property="BorderBrush" Value="{DynamicResource InfoFillColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,3"/>
        </Style>
        
        <!-- 入库 Card 样式（绿色/Success） -->
        <Style x:Key="InboundCardStyle" TargetType="Border" BasedOn="{StaticResource FluentDashboardCardBaseStyle}">
            <Setter Property="BorderBrush" Value="{DynamicResource SuccessFillColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,3"/>
        </Style>
        
        <!-- 出库 Card 样式（橙色/Warning） -->
        <Style x:Key="OutboundCardStyle" TargetType="Border" BasedOn="{StaticResource FluentDashboardCardBaseStyle}">
            <Setter Property="BorderBrush" Value="{DynamicResource WarningFillColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,3"/>
        </Style>
        
        <!-- 随行人员 Card 样式（紫色/Info Variant） -->
        <Style x:Key="EntourageCardStyle" TargetType="Border" BasedOn="{StaticResource FluentDashboardCardBaseStyle}">
            <Setter Property="BorderBrush" Value="{DynamicResource InfoVariantFillColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,3"/>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="RootGrid" 
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <ScrollViewer Margin="0"
                      Padding="0"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      CanContentScroll="False"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
            <StackPanel Margin="24"
                        HorizontalAlignment="Stretch">
                <!-- 问候语和统计卡片区域（带背景图片） -->
                <Grid Margin="0,0,0,32">
                    <Grid.Background>
                        <ImageBrush ImageSource="/Assets/win11-dashboard.png"
                                    Opacity="0.35"
                                    Stretch="UniformToFill"
                                    TileMode="None"
                                    AlignmentX="Center"
                                    AlignmentY="Center" />
                    </Grid.Background>
                    <!-- 半透明遮罩层以保持文字可读性 -->
                    <Grid Background="{DynamicResource LayerFillColorDefaultBrush}"
                          Opacity="0.3" />
                    
                    <StackPanel Margin="0">
                        <Border Padding="24"
                                Margin="0"
                                Background="Transparent">
                            <StackPanel>
                                <TextBlock Text="{Binding GreetingLine1}"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

                                <TextBlock Text="{Binding GreetingLine2}"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <UniformGrid x:Name="DashboardCardsGrid" Margin="0,24,0,24">
                <UniformGrid.Style>
                    <Style TargetType="UniformGrid">
                        <Setter Property="Columns" Value="4"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ActualWidth, ElementName=RootGrid, Converter={StaticResource WidthComparisonConverter}}" Value="True">
                                <Setter Property="Columns" Value="2"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </UniformGrid.Style>
                <!-- 在线用户 Card -->
                <Border Style="{StaticResource OnlineUsersCardStyle}"
                        Margin="0,0,8,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <fa:IconBlock Icon="Users"
                                         IconFont="Solid"
                                         Width="20"
                                         Height="20"
                                         VerticalAlignment="Center"
                                         Foreground="{DynamicResource InfoFillColorDefaultBrush}"/>
                            <TextBlock Text="{local:Localization Key=dashboard.card.onlineUsers}"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Margin="10,0,0,0"/>
                        </StackPanel>
                        <TextBlock Text="{Binding OnlineUsers}"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource InfoFillColorDefaultBrush}"
                                   Margin="0,12,0,0"
                                   LineHeight="36"/>
                    </StackPanel>
                </Border>

                <!-- 入库 Card -->
                <Border Style="{StaticResource InboundCardStyle}"
                        Margin="8,0,8,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <fa:IconBlock Icon="Box"
                                         IconFont="Solid"
                                         Width="20"
                                         Height="20"
                                         VerticalAlignment="Center"
                                         Foreground="{DynamicResource SuccessFillColorDefaultBrush}"/>
                            <TextBlock Text="{local:Localization Key=dashboard.card.todayInbound}"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Margin="10,0,0,0"/>
                        </StackPanel>
                        <TextBlock Text="{Binding TodayInbound}"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource SuccessFillColorDefaultBrush}"
                                   Margin="0,12,0,0"
                                   LineHeight="36"/>
                    </StackPanel>
                </Border>

                <!-- 出库 Card -->
                <Border Style="{StaticResource OutboundCardStyle}"
                        Margin="8,0,8,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <fa:IconBlock Icon="Truck"
                                         IconFont="Solid"
                                         Width="20"
                                         Height="20"
                                         VerticalAlignment="Center"
                                         Foreground="{DynamicResource WarningFillColorDefaultBrush}"/>
                            <TextBlock Text="{local:Localization Key=dashboard.card.todayOutbound}"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Margin="10,0,0,0"/>
                        </StackPanel>
                        <TextBlock Text="{Binding TodayOutbound}"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource WarningFillColorDefaultBrush}"
                                   Margin="0,12,0,0"
                                   LineHeight="36"/>
                    </StackPanel>
                </Border>

                <!-- 随行人员 Card -->
                <Border Style="{StaticResource EntourageCardStyle}"
                        Margin="8,0,0,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <fa:IconBlock Icon="UserCheck"
                                         IconFont="Solid"
                                         Width="20"
                                         Height="20"
                                         VerticalAlignment="Center"
                                         Foreground="{DynamicResource InfoVariantFillColorDefaultBrush}"/>
                            <TextBlock Text="{local:Localization Key=dashboard.card.todayEntourage}"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Margin="10,0,0,0"/>
                        </StackPanel>
                        <TextBlock Text="{Binding TodayEntourage}"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource InfoVariantFillColorDefaultBrush}"
                                   Margin="0,12,0,0"
                                   LineHeight="36"/>
                    </StackPanel>
                </Border>
                        </UniformGrid>
                    </StackPanel>
                </Grid>

                <!-- 目的地面板和日历 -->
                <Grid Margin="0,32,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 目的地面板 -->
                    <Border Style="{StaticResource FluentDashboardCardBaseStyle}"
                            Grid.Column="0"
                            Margin="0,0,12,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 左侧：地图区域 -->
                            <Border Grid.Column="0"
                                    Margin="0,0,16,0"
                                    Background="{DynamicResource LayerFillColorAltBrush}"
                                    CornerRadius="8"
                                    ClipToBounds="True">
                                <Grid>
                                    <!-- 地图图片背景 -->
                                    <Image Source="pack://application:,,,/Assets/global.png"
                                           Stretch="Uniform"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Opacity="0.8"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                    <!-- 可选：添加半透明遮罩层以保持文字可读性 -->
                                    <Border Background="{DynamicResource LayerFillColorAltBrush}"
                                            Opacity="0.3"/>
                                </Grid>
                            </Border>

                            <!-- 右侧：进度条区域 -->
                            <StackPanel Grid.Column="1"
                                        VerticalAlignment="Center">
                                <!-- 进度条 1 - USA (绿色) -->
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                                        <TextBlock Text="USA"
                                                   FontSize="12"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding DestinationProgress1, StringFormat='{}{0:F0}%'}"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   VerticalAlignment="Center"
                                                   MinWidth="35"
                                                   HorizontalAlignment="Right"/>
                                    </StackPanel>
                                    <Border Grid.Column="1"
                                            x:Name="ProgressBar1Container"
                                            Height="8"
                                            Background="{DynamicResource ControlFillColorTertiaryBrush}"
                                            CornerRadius="4"
                                            ClipToBounds="True"
                                            HorizontalAlignment="Stretch">
                                        <Border HorizontalAlignment="Left"
                                                Height="8"
                                                Background="{DynamicResource SuccessFillColorDefaultBrush}"
                                                CornerRadius="4">
                                            <Border.Width>
                                                <MultiBinding Converter="{StaticResource ProgressWidthMultiConverter}" ConverterParameter="100">
                                                    <Binding Path="DataContext.DestinationProgress1" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                    <Binding Path="ActualWidth" ElementName="ProgressBar1Container"/>
                                                </MultiBinding>
                                            </Border.Width>
                                            <Border.Effect>
                                                <DropShadowEffect Color="#FF107C10"
                                                                  Opacity="0.5"
                                                                  BlurRadius="4"
                                                                  ShadowDepth="0"/>
                                            </Border.Effect>
                                            <Ellipse Width="16"
                                                     Height="16"
                                                     Fill="{DynamicResource SuccessFillColorDefaultBrush}"
                                                     HorizontalAlignment="Right"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,-4,0"/>
                                        </Border>
                                    </Border>
                                </Grid>

                                <!-- 进度条 2 - EUR (蓝色) -->
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                                        <TextBlock Text="{local:Localization Key=dashboard.destination.eur}"
                                                   FontSize="12"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding DestinationProgress2, StringFormat='{}{0:F0}%'}"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   VerticalAlignment="Center"
                                                   MinWidth="35"
                                                   HorizontalAlignment="Right"/>
                                    </StackPanel>
                                    <Border Grid.Column="1"
                                            x:Name="ProgressBar2Container"
                                            Height="8"
                                            Background="{DynamicResource ControlFillColorTertiaryBrush}"
                                            CornerRadius="4"
                                            ClipToBounds="True"
                                            HorizontalAlignment="Stretch">
                                        <Border HorizontalAlignment="Left"
                                                Height="8"
                                                Background="{DynamicResource InfoFillColorDefaultBrush}"
                                                CornerRadius="4">
                                            <Border.Width>
                                                <MultiBinding Converter="{StaticResource ProgressWidthMultiConverter}" ConverterParameter="100">
                                                    <Binding Path="DataContext.DestinationProgress2" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                    <Binding Path="ActualWidth" ElementName="ProgressBar2Container"/>
                                                </MultiBinding>
                                            </Border.Width>
                                            <Border.Effect>
                                                <DropShadowEffect Color="#FF0078D4"
                                                                  Opacity="0.5"
                                                                  BlurRadius="4"
                                                                  ShadowDepth="0"/>
                                            </Border.Effect>
                                            <Ellipse Width="16"
                                                     Height="16"
                                                     Fill="{DynamicResource InfoFillColorDefaultBrush}"
                                                     HorizontalAlignment="Right"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,-4,0"/>
                                        </Border>
                                    </Border>
                                </Grid>

                                <!-- 进度条 3 - CHINA (青色) -->
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                                        <TextBlock Text="{local:Localization Key=dashboard.destination.china}"
                                                   FontSize="12"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding DestinationProgress3, StringFormat='{}{0:F0}%'}"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   VerticalAlignment="Center"
                                                   MinWidth="35"
                                                   HorizontalAlignment="Right"/>
                                    </StackPanel>
                                    <Border Grid.Column="1"
                                            x:Name="ProgressBar3Container"
                                            Height="8"
                                            Background="{DynamicResource ControlFillColorTertiaryBrush}"
                                            CornerRadius="4"
                                            ClipToBounds="True"
                                            HorizontalAlignment="Stretch">
                                        <Border HorizontalAlignment="Left"
                                                Height="8"
                                                Background="{DynamicResource AccentFillColorDefaultBrush}"
                                                CornerRadius="4">
                                            <Border.Width>
                                                <MultiBinding Converter="{StaticResource ProgressWidthMultiConverter}" ConverterParameter="100">
                                                    <Binding Path="DataContext.DestinationProgress3" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                    <Binding Path="ActualWidth" ElementName="ProgressBar3Container"/>
                                                </MultiBinding>
                                            </Border.Width>
                                            <Border.Effect>
                                                <DropShadowEffect Color="#FF009688"
                                                                  Opacity="0.5"
                                                                  BlurRadius="4"
                                                                  ShadowDepth="0"/>
                                            </Border.Effect>
                                            <Ellipse Width="16"
                                                     Height="16"
                                                     Fill="{DynamicResource AccentFillColorDefaultBrush}"
                                                     HorizontalAlignment="Right"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,-4,0"/>
                                        </Border>
                                    </Border>
                                </Grid>

                                <!-- 进度条 4 - JAPAN (紫色) -->
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                                        <TextBlock Text="{local:Localization Key=dashboard.destination.japan}"
                                                   FontSize="12"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding DestinationProgress4, StringFormat='{}{0:F0}%'}"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   VerticalAlignment="Center"
                                                   MinWidth="35"
                                                   HorizontalAlignment="Right"/>
                                    </StackPanel>
                                    <Border Grid.Column="1"
                                            x:Name="ProgressBar4Container"
                                            Height="8"
                                            Background="{DynamicResource ControlFillColorTertiaryBrush}"
                                            CornerRadius="4"
                                            ClipToBounds="True"
                                            HorizontalAlignment="Stretch">
                                        <Border HorizontalAlignment="Left"
                                                Height="8"
                                                Background="{DynamicResource InfoVariantFillColorDefaultBrush}"
                                                CornerRadius="4">
                                            <Border.Width>
                                                <MultiBinding Converter="{StaticResource ProgressWidthMultiConverter}" ConverterParameter="100">
                                                    <Binding Path="DataContext.DestinationProgress4" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                    <Binding Path="ActualWidth" ElementName="ProgressBar4Container"/>
                                                </MultiBinding>
                                            </Border.Width>
                                            <Border.Effect>
                                                <DropShadowEffect Color="#FF6366F1"
                                                                  Opacity="0.5"
                                                                  BlurRadius="4"
                                                                  ShadowDepth="0"/>
                                            </Border.Effect>
                                            <Ellipse Width="16"
                                                     Height="16"
                                                     Fill="{DynamicResource InfoVariantFillColorDefaultBrush}"
                                                     HorizontalAlignment="Right"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,-4,0"/>
                                        </Border>
                                    </Border>
                                </Grid>

                                <!-- 进度条 5 - OTHER (橙色) -->
                                <Grid Margin="0,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                                        <TextBlock Text="{local:Localization Key=dashboard.destination.other}"
                                                   FontSize="12"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding DestinationProgress5, StringFormat='{}{0:F0}%'}"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   VerticalAlignment="Center"
                                                   MinWidth="35"
                                                   HorizontalAlignment="Right"/>
                                    </StackPanel>
                                    <Border Grid.Column="1"
                                            x:Name="ProgressBar5Container"
                                            Height="8"
                                            Background="{DynamicResource ControlFillColorTertiaryBrush}"
                                            CornerRadius="4"
                                            ClipToBounds="True"
                                            HorizontalAlignment="Stretch">
                                        <Border HorizontalAlignment="Left"
                                                Height="8"
                                                Background="{DynamicResource WarningFillColorDefaultBrush}"
                                                CornerRadius="4">
                                            <Border.Width>
                                                <MultiBinding Converter="{StaticResource ProgressWidthMultiConverter}" ConverterParameter="100">
                                                    <Binding Path="DataContext.DestinationProgress5" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                    <Binding Path="ActualWidth" ElementName="ProgressBar5Container"/>
                                                </MultiBinding>
                                            </Border.Width>
                                            <Border.Effect>
                                                <DropShadowEffect Color="#FFFF8C00"
                                                                  Opacity="0.5"
                                                                  BlurRadius="4"
                                                                  ShadowDepth="0"/>
                                            </Border.Effect>
                                            <Ellipse Width="16"
                                                     Height="16"
                                                     Fill="{DynamicResource WarningFillColorDefaultBrush}"
                                                     HorizontalAlignment="Right"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,-4,0"/>
                                        </Border>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- 日历面板 -->
                    <Border Style="{StaticResource FluentDashboardCardBaseStyle}"
                            Grid.Column="1"
                            Margin="12,0,0,0">
                        <Calendar SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                                  DisplayDate="{Binding CalendarDate, Mode=TwoWay}"
                                  SelectionMode="SingleDate"
                                  FirstDayOfWeek="Monday">
                            <Calendar.Style>
                                <Style TargetType="Calendar" BasedOn="{StaticResource MaterialDesignCalendarPortrait}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="materialDesign:CalendarAssist.SelectionColor" Value="{DynamicResource AccentFillColorDefaultBrush}"/>
                                    <Setter Property="materialDesign:CalendarAssist.SelectionForegroundColor" Value="{DynamicResource TextOnAccentFillColorPrimaryBrush}"/>
                                    <Setter Property="materialDesign:CalendarAssist.HeaderBackground" Value="Transparent"/>
                                    <Setter Property="materialDesign:CalendarAssist.HeaderForeground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                                </Style>
                            </Calendar.Style>
                        </Calendar>
                    </Border>
                </Grid>
        </StackPanel>
        </ScrollViewer>
        
        <!-- 水印：公司标语 -->
        <Viewbox Stretch="Uniform"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 MaxWidth="{Binding ActualWidth, ElementName=RootGrid}"
                 MaxHeight="{Binding ActualHeight, ElementName=RootGrid}"
                 IsHitTestVisible="False">
            <TextBlock Text="{local:Localization Key=common.app.tagline}"
                       FontSize="32"
                       FontWeight="Light"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                       Opacity="0.03"/>
        </Viewbox>
    </Grid>
</UserControl>
