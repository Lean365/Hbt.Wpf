<Window x:Class="Takt.Fluent.Controls.TaktMessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Title}"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="Transparent"
        MinWidth="400"
        MaxWidth="600"
        WindowStyle="None"
        AllowsTransparency="True">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <Border BorderBrush="{DynamicResource MaterialDesignDivider}"
            BorderThickness="1"
            CornerRadius="8"
            Background="{DynamicResource MaterialDesignPaper}"
            Padding="24">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                            Opacity="0.3" 
                            BlurRadius="20" 
                            ShadowDepth="5" 
                            Direction="270"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 图标 -->
                <materialDesign:PackIcon Grid.Column="0"
                                         Kind="{Binding IconKind}"
                                         Width="32"
                                         Height="32"
                                         VerticalAlignment="Center"
                                         Margin="0,0,16,0"
                                         Foreground="{Binding IconBrush}"/>
                
                <!-- 标题文本 -->
                <TextBlock Grid.Column="1"
                           Text="{Binding Title}"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"/>
            </Grid>

            <!-- 消息内容 -->
            <ScrollViewer Grid.Row="1"
                          MaxHeight="300"
                          VerticalScrollBarVisibility="Auto"
                          Margin="0,0,0,16">
                <TextBlock Text="{Binding Message}"
                           FontSize="14"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                           TextWrapping="Wrap"
                           LineHeight="24"/>
            </ScrollViewer>

            <!-- 按钮区域 -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,8,0,0">
                <!-- OK 按钮 -->
                <Button Content="{Binding OkButtonText}"
                        Command="{Binding OkCommand}"
                        Style="{StaticResource DefaultPrimary}"
                        MinWidth="100"
                        Margin="0,0,8,0"
                        Visibility="{Binding ShowOkButton, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <!-- Yes 按钮 -->
                <Button Content="{Binding YesButtonText}"
                        Command="{Binding YesCommand}"
                        Style="{StaticResource DefaultPrimary}"
                        MinWidth="100"
                        Margin="0,0,8,0"
                        Visibility="{Binding ShowYesButton, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <!-- No 按钮 -->
                <Button Content="{Binding NoButtonText}"
                        Command="{Binding NoCommand}"
                        Style="{StaticResource DefaultInfo}"
                        MinWidth="100"
                        Margin="0,0,8,0"
                        Visibility="{Binding ShowNoButton, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <!-- Cancel 按钮 -->
                <Button Content="{Binding CancelButtonText}"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource DefaultInfo}"
                        MinWidth="100"
                        Visibility="{Binding ShowCancelButton, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

