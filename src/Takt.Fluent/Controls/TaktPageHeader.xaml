<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Takt.Fluent.Controls"
    xmlns:helpers="clr-namespace:Takt.Fluent.Helpers">

    <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

    <Style TargetType="{x:Type controls:TaktPageHeader}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:TaktPageHeader}">
                    <StackPanel Margin="0">
                        <TextBlock
                            FontSize="28"
                            FontWeight="SemiBold"
                            Text="{TemplateBinding Title}"
                            Margin="0"
                            LineHeight="28"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

                        <TextBlock
                            x:Name="DescriptionTextBlock"
                            Text="{TemplateBinding Description}"
                            FontSize="14"
                            FontWeight="Normal"
                            TextWrapping="Wrap"
                            Margin="0,4,0,0"
                            LineHeight="14"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Visibility="{TemplateBinding Description, Converter={StaticResource NullToVisibilityConverter}}"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="ShowDescription" Value="False">
                            <Setter TargetName="DescriptionTextBlock"
                                    Property="Visibility"
                                    Value="Collapsed"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>

