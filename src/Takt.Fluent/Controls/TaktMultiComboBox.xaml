<UserControl x:Class="Takt.Fluent.Controls.TaktMultiComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:helpers="clr-namespace:Takt.Fluent.Helpers"
             mc:Ignorable="d"
             d:DesignHeight="36"
             d:DesignWidth="200">
    <UserControl.Resources>
        <helpers:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <Style x:Key="SmallTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <!-- 尺寸设置 -->
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="MaxHeight" Value="32"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <!-- 适配项目主题 -->
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Setter Property="materialDesign:HintAssist.Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}"/>
            <Setter Property="materialDesign:TextFieldAssist.DecorationVisibility" Value="Collapsed"/>
        </Style>
        <Style x:Key="MediumTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <!-- 尺寸设置 -->
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="MaxHeight" Value="36"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <!-- 适配项目主题 -->
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Setter Property="materialDesign:HintAssist.Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}"/>
            <Setter Property="materialDesign:TextFieldAssist.DecorationVisibility" Value="Collapsed"/>
        </Style>
        <Style x:Key="LargeTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <!-- 尺寸设置 -->
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="MaxHeight" Value="40"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <!-- 适配项目主题 -->
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Setter Property="materialDesign:HintAssist.Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}"/>
            <Setter Property="materialDesign:TextFieldAssist.DecorationVisibility" Value="Collapsed"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <!-- 多选模式：使用 TextBox + Popup -->
        <TextBox x:Name="InnerTextBox"
                 IsReadOnly="{Binding IsEditable, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource InverseBoolConverter}}"
                 Cursor="Hand"
                 PreviewMouseLeftButtonDown="InnerTextBox_PreviewMouseLeftButtonDown"
                 GotFocus="InnerTextBox_GotFocus"
                 TextChanged="InnerTextBox_TextChanged"
                 KeyDown="InnerTextBox_KeyDown"
                 LostFocus="InnerTextBox_LostFocus"/>
        <Popup x:Name="ItemsPopup"
               Placement="Bottom"
               PlacementTarget="{Binding ElementName=InnerTextBox}"
               StaysOpen="False"
               PopupAnimation="Slide"
               AllowsTransparency="True"
               Opened="ItemsPopup_Opened"
               Closed="ItemsPopup_Closed">
            <Border Background="White"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    CornerRadius="4"
                    MaxHeight="300"
                    MinWidth="{Binding ActualWidth, ElementName=InnerTextBox}">
                <!-- 列表 -->
                <ListBox x:Name="ItemsListBox"
                         SelectionMode="Multiple"
                         ItemsSource="{Binding FilteredItemsSource, RelativeSource={RelativeSource AncestorType=UserControl}}"
                         DisplayMemberPath="{Binding DisplayMemberPath, RelativeSource={RelativeSource AncestorType=UserControl}}"
                         ItemTemplate="{Binding ItemTemplate, RelativeSource={RelativeSource AncestorType=UserControl}}"
                         ItemContainerStyle="{Binding ItemContainerStyle, RelativeSource={RelativeSource AncestorType=UserControl}}"
                         MaxHeight="300"
                         VirtualizingPanel.IsVirtualizing="True"
                         VirtualizingPanel.VirtualizationMode="Recycling"
                         ScrollViewer.CanContentScroll="True"
                         KeyDown="ItemsListBox_KeyDown"
                         SelectionChanged="ItemsListBox_SelectionChanged"/>
            </Border>
        </Popup>
    </Grid>
</UserControl>

