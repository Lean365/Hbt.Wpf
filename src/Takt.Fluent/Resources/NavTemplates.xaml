<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
    xmlns:helpers="clr-namespace:Takt.Fluent.Helpers">

    <helpers:StringToIconCharConverter x:Key="StringToIconCharConverter"/>

    <ItemsPanelTemplate x:Key="WrapPanelTemplate">
        <WrapPanel Margin="10"
                Orientation="Horizontal"/>
    </ItemsPanelTemplate>

    <DataTemplate x:Key="NavigationCardTemplate">
        <Button
            Width="360"
            Height="90"
            Margin="7"
            Padding="20,10"
            HorizontalContentAlignment="Left"
            AutomationProperties.Name="{Binding Title, StringFormat='{}{0}Page'}"
            Command="{Binding DataContext.ViewModel.NavigateCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
            CommandParameter="{Binding MenuItem}">
            <StackPanel Orientation="Horizontal">
                <fa:IconBlock
                    Icon="{Binding Icon, Converter={StaticResource StringToIconCharConverter}}"
                    IconFont="Solid"
                    Width="50"
                    Height="50"
                    Margin="0,0,8,0"/>
                <StackPanel Orientation="Vertical">
                    <TextBlock
                        Margin="10,0,0,0"
                        Style="{DynamicResource MaterialDesignHeadlineSmallTextBlockStyle}"
                        Text="{Binding Title}" 
                        AutomationProperties.HeadingLevel="Level3" />
                    <TextBlock
                        Width="240"
                        Margin="10,0,0,0"
                        Opacity="0.7"
                        Style="{DynamicResource MaterialDesignBodySmallTextBlockStyle}"
                        Text="{Binding Description}"/>
                </StackPanel>
            </StackPanel>
        </Button>
    </DataTemplate>

</ResourceDictionary>

