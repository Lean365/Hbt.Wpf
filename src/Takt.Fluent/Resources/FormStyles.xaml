<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <!-- ==================== 表单错误文本样式 ==================== -->
    
    <!-- 表单字段错误消息文本样式（统一实现，用于有标签列的表单） -->
    <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource SystemFillColorCriticalBrush}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="112,4,0,0"/>
        <Setter Property="MinHeight" Value="20"/>
    </Style>
    
    <!-- 登录页面字段错误消息文本样式（用于有图标的输入框） -->
    <Style x:Key="LoginErrorTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource SystemFillColorCriticalBrush}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="MinHeight" Value="20"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    
    <!-- ==================== 统一错误消息样式 ==================== -->
    
    <!-- 统一错误消息 Border 样式（用于服务端/系统错误） -->
    <Style x:Key="ErrorMessageBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SystemFillColorCriticalBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Margin" Value="0,12,0,0"/>
    </Style>
    
    <!-- 统一错误消息文本样式（用于服务端/系统错误） -->
    <Style x:Key="ErrorMessageTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Margin" Value="8,0,0,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
</ResourceDictionary>

