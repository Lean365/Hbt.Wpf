<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ========================================
         基础层颜色（Background & Layer）
         ======================================== -->
    
    <!-- 应用程序背景 -->
    <SolidColorBrush x:Key="ApplicationBackgroundBrush" Color="#FFF5F5F5"/>
    
    <!-- 图层填充颜色 -->
    <SolidColorBrush x:Key="LayerFillColorDefaultBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="LayerFillColorAltBrush" Color="#FFF7F7F7"/>
    
    <!-- 卡片背景和边框 -->
    <SolidColorBrush x:Key="CardBackgroundFillColorDefaultBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="CardStrokeColorDefaultBrush" Color="#FFE0E0E0"/>
    
    <!-- ========================================
         控件颜色（Control）
         ======================================== -->
    
    <!-- 控件填充颜色 -->
    <SolidColorBrush x:Key="ControlFillColorDefaultBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="ControlFillColorSecondaryBrush" Color="#FFF2F2F2"/>
    <SolidColorBrush x:Key="ControlFillColorTertiaryBrush" Color="#FFE6E6E6"/>
    <SolidColorBrush x:Key="ControlFillColorDisabledBrush" Color="#FFDDDDDD"/>
    <SolidColorBrush x:Key="ControlAltFillColorQuarternaryBrush" Color="#FFEDEDED"/>
    
    <!-- 控件边框颜色 -->
    <SolidColorBrush x:Key="ControlStrokeColorDefaultBrush" Color="#FFCCCCCC"/>
    <SolidColorBrush x:Key="ControlStrokeColorSecondaryBrush" Color="#FFBDBDBD"/>
    
    <!-- 控件强调填充和边框 -->
    <SolidColorBrush x:Key="ControlStrongFillColorDefaultBrush" Color="#FFE4E4E4"/>
    <SolidColorBrush x:Key="ControlStrongStrokeColorDefaultBrush" Color="#FFA6A6A6"/>
    
    <!-- ========================================
         文本颜色（Text）
         ======================================== -->
    
    <!-- 文本填充颜色 -->
    <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#FF1F1F1F"/>
    <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="#FF616161"/>
    <SolidColorBrush x:Key="TextFillColorDisabledBrush" Color="#FF9E9E9E"/>
    
    <!-- ========================================
         强调色（Accent）
         ======================================== -->
    
    <!-- Accent 填充颜色（Teal/青色系） -->
    <SolidColorBrush x:Key="AccentFillColorDefaultBrush" Color="#FF009688"/>
    <SolidColorBrush x:Key="AccentFillColorSecondaryBrush" Color="#FF4DB6AC"/>
    <SolidColorBrush x:Key="AccentFillColorTertiaryBrush" Color="#FF00796B"/>
    <SolidColorBrush x:Key="AccentFillColorControlBrush" Color="#FF009688"/>
    
    <!-- Accent 文本颜色 -->
    <SolidColorBrush x:Key="AccentTextFillColorPrimaryBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="AccentTextFillColorSecondaryBrush" Color="#FFE0F2F1"/>
    
    <!-- Accent 上的文本颜色 -->
    <SolidColorBrush x:Key="TextOnAccentFillColorPrimaryBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="TextOnAccentFillColorSecondaryBrush" Color="#FFE0E0E0"/>
    
    <!-- ========================================
         语义颜色（Semantic Colors）
         ======================================== -->
    
    <!-- Success - 成功/绿色 -->
    <SolidColorBrush x:Key="SuccessFillColorDefaultBrush" Color="#FF107C10"/>
    <SolidColorBrush x:Key="SuccessFillColorSecondaryBrush" Color="#FF6FBD6F"/>
    <SolidColorBrush x:Key="SuccessTextFillColorPrimaryBrush" Color="#FFFFFFFF"/>
    
    <!-- Warning - 警告/橙色 -->
    <SolidColorBrush x:Key="WarningFillColorDefaultBrush" Color="#FFFF8C00"/>
    <SolidColorBrush x:Key="WarningFillColorSecondaryBrush" Color="#FFFFAA33"/>
    <SolidColorBrush x:Key="WarningTextFillColorPrimaryBrush" Color="#FFFFFFFF"/>
    
    <!-- Info - 信息/蓝色 -->
    <SolidColorBrush x:Key="InfoFillColorDefaultBrush" Color="#FF0078D4"/>
    <SolidColorBrush x:Key="InfoFillColorSecondaryBrush" Color="#FF3399FF"/>
    <SolidColorBrush x:Key="InfoTextFillColorPrimaryBrush" Color="#FFFFFFFF"/>
    
    <!-- Info Variant - 信息变体/紫色（用于随行人员等特殊场景） -->
    <SolidColorBrush x:Key="InfoVariantFillColorDefaultBrush" Color="#FF6366F1"/>
    <SolidColorBrush x:Key="InfoVariantFillColorSecondaryBrush" Color="#FF8184F3"/>
    <SolidColorBrush x:Key="InfoVariantTextFillColorPrimaryBrush" Color="#FFFFFFFF"/>
    
    <!-- ========================================
         系统颜色（System）
         ======================================== -->
    
    <!-- 系统填充颜色 - 关键/错误 -->
    <SolidColorBrush x:Key="SystemFillColorCriticalBrush" Color="#FFD92D20"/>
    
    <!-- ========================================
         焦点和交互颜色（Focus & Interaction）
         ======================================== -->
    
    <!-- 焦点边框颜色 -->
    <SolidColorBrush x:Key="FocusStrokeColorOuterBrush" Color="#FF1976D2"/>
    
    <!-- ========================================
         数字标牌专用颜色（Digital Signage）
         ======================================== -->
    
    <!-- 欢迎卡片背景（中国红/喜庆红） -->
    <SolidColorBrush x:Key="WelcomeRedBackground" Color="#CC092F"/>
    
    <!-- 欢迎卡片文本（中国黄） -->
    <SolidColorBrush x:Key="WelcomeYellowText" Color="#FFD400"/>
    
</ResourceDictionary>

